<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="message1" class="pl.sda.jira.message.Message">
        <constructor-arg name="topic" value="Some topic"/>
        <property name="contect" value="you are late with deliver"/>
    </bean>

    <bean id="message2" class="pl.sda.jira.message.Message">
        <constructor-arg name="topic" value="Another topic"/>
        <property name="recipient" value="sebastian.malaca@gmail.com"/>
        <property name="sender" value="sebastian.malaca@gmail.com"/>
    </bean>

    <bean id="message3" class="pl.sda.jira.message.Message">
        <constructor-arg name="topic" value="Yet another topic"/>
    </bean>

    <bean class="pl.sda.jira.message.MessageRepository">
        <constructor-arg>
            <list>
                <ref bean="message1"/>
                <ref bean="message2"/>
                <ref bean="message3"/>
            </list>
        </constructor-arg>
    </bean>
</beans>