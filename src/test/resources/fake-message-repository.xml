<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="message1" class="pl.sda.jira.message.Message">
        <constructor-arg name="topic" value="Your time is over"/>
        <property name="contect" value="Bye bye"/>
    </bean>

    <bean id="message2" class="pl.sda.jira.message.Message" parent="message1">
        <property name="recipient" value="sebastian.malaca@gmail.com"/>
        <property name="sender" value="sebastian.malaca@gmail.com"/>
        <property name="contect" value="Can be overriden"/>
    </bean>

    <bean id="message3" class="pl.sda.jira.message.Message" parent="message1"/>

    <bean id="messageFactory" class="pl.sda.jira.message.MessageFactory"/>

    <bean id="message4" factory-bean="messageFactory" factory-method="aMessage">
        <constructor-arg value="some topic"/>
    </bean>

    <bean id="message5" factory-bean="messageFactory" factory-method="aMessageWithContent">
        <constructor-arg name="topic" value="some topic"/>
        <constructor-arg name="content" value="some content"/>
    </bean>

    <util:list id="messages">
        <ref bean="message1"/>
        <ref bean="message2"/>
        <ref bean="message3"/>
        <ref bean="message4"/>
        <ref bean="message5"/>
    </util:list>
</beans>