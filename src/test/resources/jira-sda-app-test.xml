<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="forum1" class="pl.sda.jira.forum.domain.Forum">
        <constructor-arg name="name" value="NAME"/>
        <constructor-arg name="spaceId" value="SPACE_ID"/>
    </bean>

    <bean id="forum2" class="pl.sda.jira.forum.domain.Forum" parent="forum1">
        <property name="topics">
            <list>
                <bean class="pl.sda.jira.forum.domain.Topic"/>
            </list>
        </property>
    </bean>

    <bean id="forumFactory" class="pl.sda.jira.forum.domain.ForumFactory"/>

    <bean id="forum3" factory-bean="forumFactory" factory-method="aForum">
        <constructor-arg value="NAME"/>
        <constructor-arg value="SPACE_ID"/>
    </bean>

    <bean id="forum4" factory-bean="forumFactory" factory-method="aForumWithTopic">
       <constructor-arg name="name" value="NAME"/>
        <constructor-arg name="spaceId" value="SPACE_ID"/>
        <constructor-arg name="topics">
            <list>
                <bean class="pl.sda.jira.forum.domain.Topic"/>
            </list>
        </constructor-arg>
    </bean>
    <bean class="pl.sda.jira.forum.domain.ForumRepo">
        <constructor-arg>
            <list>
                <ref bean="forum1"/>
                <ref bean="forum2"/>
                <ref bean="forum3"/>
                <ref bean="forum4"/>
                <bean class="pl.sda.jira.forum.domain.Forum">
                    <constructor-arg name="name" value="NAME"/>
                    <constructor-arg name="spaceId" value="SPACE_ID"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>


</beans>