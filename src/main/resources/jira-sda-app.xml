<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- forum -->

    <!-- calendar -->
    <bean class="pl.sda.jira.calendar.persistency.inmemory.InMemoryCalendarRepository"/>
    <bean class="pl.sda.jira.calendar.rest.CalendarController"/>

    <!-- documentation -->
    <bean name="documentationRepository" class="pl.sda.jira.documentation.domain.FakeDocumentationRepository"/>
    <bean class="pl.sda.jira.documentation.rest.DocumentationController">
            <constructor-arg ref="documentationRepository"/>
    </bean>

    <!--project-->
    <bean name="projectControler" class="pl.sda.jira.project.ProjectControler">
        <constructor-arg ref="teamRepository"/>
        <constructor-arg ref="projectRepository"/>
    </bean>
    <bean name="teamRepository" class="pl.sda.jira.project.model.TeamRepository"/>
    <bean name="projectRepository" class="pl.sda.jira.project.model.FakeProjectRepository"/>
</beans>